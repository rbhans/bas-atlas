{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://basidekick.com/schemas/atlas-search-index.schema.json",
  "type": "object",
  "required": ["version", "entries"],
  "properties": {
    "version": { "type": "string" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "name", "tokens"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["brand", "type", "model"] },
          "name": { "type": "string" },
          "brand": { "type": "string" },
          "model_numbers": { "type": "array", "items": { "type": "string" } },
          "tokens": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
